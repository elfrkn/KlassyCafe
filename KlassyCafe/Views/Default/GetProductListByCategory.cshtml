@model List<ResultProductWithCategoryDto>

<div class="col-lg-12">
    <section class='tabs-content'>
        <article id='tabs-1'>
            <div class="row">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="left-list">
                            <div class="col-lg-12">
                                @foreach (var item in Model)
                                {
                                    <div class="tab-item">
                                        <img src="@item.ImageUrl" alt="">
                                        <h4>@item.Title</h4>
                                        <p>@item.Description</p>
                                        <div class="price">
                                            <h6>@item.Total ₺</h6>
                                        </div>
                                    </div>
                                }
                    </div>
                </div>
            </div>
        </article>

    </section>
</div>
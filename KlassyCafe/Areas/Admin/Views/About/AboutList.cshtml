@model List<ResultAboutDto>
@{
    ViewData["Title"] = "AboutList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header border-0">
                <h3 class="mb-0">Hakkımızda </h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Başlık</th>
                            <th scope="col">Video Url</th>
                            <th scope="col">Açıklama</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;

                            <tr>
                                <td>@count</td>
                                <td>@item.Title</td>
                                <td>@item.VideoUrl</td>
                                <td>
                                    <a href="/Admin/About/DeleteAbout/@item.AboutId" class="btn btn-warning">Sil</a>
                                    <a href="/Admin/About/UpdateAbout/@item.AboutId" class="btn btn-info">Güncelle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <br />
        <td> <a href="/Admin/About/CreateAbout/" class="btn btn-primary">Yeni Ekle</a></td>
    </div>
</div>
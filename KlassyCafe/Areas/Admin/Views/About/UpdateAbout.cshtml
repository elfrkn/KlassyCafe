@model GetByIdAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header border-0">
                <h3 class="mb-0"></h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                    <tbody>
                        <form method="post" enctype="multipart/form-data">
                            <div class="container">
                                <br /><br />
                                <input type="hidden" asp-for="AboutId" class="form-control" />
                                <label>Başlık</label>
                                <input type="text" asp-for="Title" class="form-control" />
                                <br />
                                <label>Video Url</label>
                                <input type="text" asp-for="VideoUrl" class="form-control" />
                                <br />
                                <label>Açıklama</label>
                                <textarea rows="6" asp-for="Description" class="form-control"></textarea>
                                <br />
                                <button type="submit" class="btn btn-primary">Güncelle</button>
                                <br /><br />
                            </div>
                        </form>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
